        <activity
            android:name=".guides.register"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".guides.VISA"
            android:label="@string/title_activity_vis"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".guides.studentcard"
            android:label="@string/title_activity_studentcard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".guides.gymcard"
            android:label="@string/title_activity_gymcard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Language"
            android:label="@string/title_activity_language"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>