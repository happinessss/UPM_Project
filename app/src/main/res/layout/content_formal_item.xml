<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hushengyou.upm_project.NoteItemActivity"
    tools:showIn="@layout/activity_formal_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/homepage"
                android:id="@+id/formal_homepage"/>

        <TextView
            android:id="@+id/formal_item_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            android:textStyle="bold"/>

    </RelativeLayout>

        <TextView
            android:id="@+id/formal_item_tv_detail"
            android:layout_marginTop="50dp"
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:textSize="20sp">
            
        </TextView>
        
        <ImageView
            android:id="@+id/formal_item_iv"
            android:layout_marginTop="10dp"
            android:layout_width="240dp"
            android:layout_height="240dp" />
        
        <Button
            android:id="@+id/formal_item_bu"
            android:layout_marginTop="22dp"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_shape"
            android:text="NEXT"
            android:textSize="20sp"
            android:visibility="invisible"
            android:alpha="0.5"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
